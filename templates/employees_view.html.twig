{% extends "base.html.twig" %}

{% block content %}

<h3>Empleado</h3>
<form method="post" action="/employees/{{employee.id}}/delete" id="deleteForm">
  <div class="btn-group">
    <a href="/employees/{{employee.id}}/edit" class="btn btn-primary btn-sm">
      <i class="glyphicon glyphicon-edit"></i>
      Editar Empleado
    </a>
    <button id="submit" type="submit" class="btn btn-danger btn-sm">
      <i class="glyphicon glyphicon-trash"></i>
      Eliminar Empleado
    </button>
  </div>
</form>

{# [START employee_details] #}
<div class="media">
  <div class="media-body">
    <h4 class="book-title">
      {{employee.primer_nombre}}
    </h4>
    <h5>{{employee.primer_apellido|default('Unknown', True)}}</h5>
    <p class="book-description">Labora desde: {{employee.fecha_ingreso}}</p>
    <p class="book-description">Fecha Nacimiento: {{employee.fecha_nacimiento}}</p>
  </div>
</div>
{# [END employee_details] #}

{% endblock %}
