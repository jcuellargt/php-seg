{% extends "base.html.twig" %}

{% block content %}

<h3>Empleados</h3>
<a href="/employees/add" class="btn btn-success btn-sm">
  <i class="glyphicon glyphicon-plus"></i>
  Agregar Empleado
</a>

{# [START employee_list] #}
{% for employee in employees %}
<div class="media">
  <a href="/employees/{{employee.id}}">

    <div class="media-body">
      <h4>{{employee.primer_nombre}}</h4>
      <p>{{employee.primer_apellido}}</p>
    </div>
  </a>
</div>
{% else %}
<p>No se encontraron empleados</p>
{% endfor %}
{# [END employee_list] #}

{% if next_page_token %}
<nav>
  <ul class="pager">
    <li><a href="?page_token={{next_page_token}}">Mas</a></li>
  </ul>
</nav>
{% endif %}

{% endblock %}
