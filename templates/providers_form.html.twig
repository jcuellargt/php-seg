{# [START providers_form] #}
{% extends "base.html.twig" %}

{% block content %}
<h3>{{action}} Empleado</h3>

<form method="POST" enctype="multipart/form-data">

  <div class="form-group">
    <label for="title">Organizacion</label>
    <input type="text" name="title" id="title" value="{{provider.organizacion}}" class="form-control"/>
  </div>

  <div class="form-group">
    <label for="author">Nombre</label>
    <input type="text" name="author" id="author" value="{{provider.nombre}}" class="form-control"/>
  </div>

  <div class="form-group">
    <label for="published_date">Apellidos</label>
    <input type="text" name="published_date" id="published_date" value="{{provider.apellidos}}" class="form-control"/>
  </div>

  <div class="form-group">
    <label for="description">email</label>
    <textarea name="description" id="description" class="form-control">{{provider.email}}</textarea>
  </div>

  <button id="submit" type="submit" class="btn btn-success">Save</button>
</form>

{% endblock %}
{# [END providers_form] #}
