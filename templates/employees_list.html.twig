{% extends "base.html.twig" %}

{% block content %}

<h3>Empleados</h3>
<a href="/employees/add" class="btn btn-success btn-sm">
  <i class="glyphicon glyphicon-plus"></i>
  Agregar Empleado
</a>
</br></br></br>
<table class="table table-hover">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Apellido</th>
      </tr>
    </thead>
    <tbody>
{# [START employee_list] #}
{% for employee in employees %}
<tr>
  <td>  <a href="/employees/{{employee.id}}"> <p>{{employee.primer_nombre}}</p></td>
  <td><p>{{employee.primer_apellido}}</p></td>
</tr>
{% else %}
<p>No se encontraron empleados</p>
{% endfor %}
{# [END employee_list] #}
</tbody>
</table>
{% if next_page_token %}
<nav>
  <ul class="pager">
    <li><a href="?page_token={{next_page_token}}">Mas</a></li>
  </ul>
</nav>
{% endif %}

{% endblock %}
