{% extends "base.html.twig" %}

{% block content %}

<h3>Proveedores</h3>
<a href="/providers/add" class="btn btn-success btn-sm">
  <i class="glyphicon glyphicon-plus"></i>
  Agregar Proveedor
</a>

{# [START provider_list] #}
{% for provider in providers %}
<div class="media">
  <a href="/provider/{{provider.id}}">
    <div class="media-left">
      <img src="http://placekitten.com/g/128/192">
    </div>
    <div class="media-body">
      <h4>{{provider.organizacion}}</h4>
      <p>{{provider.email}}</p>
    </div>
  </a>
</div>
{% else %}
<p>No se encontraron proveedores</p>
{% endfor %}
{# [END provider_list] #}

{% if next_page_token %}
<nav>
  <ul class="pager">
    <li><a href="?page_token={{next_page_token}}">Mas</a></li>
  </ul>
</nav>
{% endif %}

{% endblock %}
