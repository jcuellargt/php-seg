{% extends "base.html.twig" %}

{% block content %}

<h3>Proveedor</h3>
<form method="post" action="/providers/{{provider.id}}/delete" id="deleteForm">
  <div class="btn-group">
  <a href="/providers/" class="btn btn-primary btn-sm">
    <i class="glyphicon glyphicon-arrow-left"></i>
    Regresar
  </a>
    <a href="/providers/{{provider.id}}/edit" class="btn btn-primary btn-sm">
      <i class="glyphicon glyphicon-edit"></i>
      Editar Proveedor
    </a>
    <button id="submit" type="submit" class="btn btn-danger btn-sm">
      <i class="glyphicon glyphicon-trash"></i>
      Eliminar Proveedor
    </button>
  </div>
</form>

{# [START provider_details] #}
<div class="media">
  <div class="media-body">
    <h4 class="book-title">
      {{provider.organizacion}}
    </h4>
    <small>Contacto: {{provider.email}}</small>
    <h5 class="book-author">{{provider.nombre}} {{provider.apellidos}}</h5>
  </div>
</div>
{# [END provider_details] #}

{% endblock %}
